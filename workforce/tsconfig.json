{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // Allow JavaScript files alongside TypeScript
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true, // Don't emit files, just type-check
    "esModuleInterop": true,
    "module": "esnext", // Use ES Modules
    "moduleResolution": "node", // Use Node module resolution strategy
    "resolveJsonModule": true,
    "isolatedModules": true, // Ensure each file is treated as an isolated module
    "jsx": "preserve", // Use the React JSX transform for React 17+
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TSX files
    "**/*.js", // Include all JavaScript files
    "**/*.jsx", // Include all JSX files
    ".next/types/**/*.ts", // TypeScript types generated by Next.js
    ".next/types/**/*.js", // TypeScript types generated by Next.js

    "lib/utils.ts", // Specific file to include
    "components/**/*", // Include all components folder files
    "app/**/*" // Include all app folder files
  ],
  "exclude": [
    "node_modules" // Exclude node_modules
  ]
}
